<div>
  <a
    href="/teacher/addrecord"
    class="btn btn-sm btn-dark"
    style="margin-top: 5px; margin-left: 7px; float: right;"
    >Add-Record</a
  >
  <span
    >&nbsp;&nbsp;&nbsp;<a
      href="/teacher/logout"
      style="margin-top: 5px; float: right;"
      class="btn btn-sm btn-dark px-3"
      >logout</a
    >
  </span>
</div>

<h4 style="text-align: center;">All Students</h4>
<div class="container d-flex align-items-center justify-content-center mt-5">
  <div class="card">
    <div class="card-body px-5 py-4 table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Roll No.</th>
            <th scope="col">Name</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Score</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
          <tr class="head">
            <td><%= student.roll %></td>
            <td><%= student.name %></td>
            <td><%= student.dob.toLocaleDateString()%></td>
            <td><%= student.score %></td>
            <td>
              <a href="/teacher/updaterecord/<%= student._id %> "
                ><img
                  style="margin: 0px 5px;"
                  src="https://img.icons8.com/material-outlined/30/000000/edit.png"
              /></a>
              <a href="/teacher/delete/<%= student._id %> "
                ><img
                  style="margin: 0px 5px;"
                  src="https://img.icons8.com/ios-glyphs/30/000000/filled-trash.png"
              /></a>
            </td>
          </tr>
          <%}) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="page">

  <strong><em>Page:</em></strong>

<%

  for(let i=1;i<=totalPages;i++){%>

    <a id="pagebtn" class="btn btn-secondary  mx-2" href="?page=<%=i%>"><%=i%></a>

<%}%>

</div>

 