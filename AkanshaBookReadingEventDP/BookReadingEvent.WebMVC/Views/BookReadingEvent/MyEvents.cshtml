@model IList<EventViewModel>
@{
    ViewData["Title"] = "MyEvents";
}

<div class="card mt-4">
    <div class="row">
        <div class="col-12 col-sm-12">
            <div class="card-header">
                <h3 class="text-center">My Events</h3>
            </div>
        </div>
        <div class="col-12 col-sm-12">
            @foreach (var e in Model)
            {
                <div class="row">
                    <div class="col-12 col-sm-8 text-left p-5">
                        <a asp-action="EventDetails" asp-controller="BookReadingEvent" asp-route-id="@e.Id">@e.Title </a>
                    </div>
                    <div class="col-12 col-sm-4 text-right p-5">
                        <a class="btn btn-outline-info" asp-action="EditEvent" asp-controller="BookReadingEvent" asp-route-id="@e.Id">Edit Event </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
